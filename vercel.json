{
  "version": 2,
  "builds": [
    {
      "src": "webapp/app.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.11", "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "webapp/app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
